{% extends '../admin.html.twig' %}

{% block title %}ProductProperty index{% endblock %}

{% block body %}
    <h1>ProductProperty index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product_property in product_properties %}
            <tr>
                <td>{{ product_property.id }}</td>
                <td>{{ product_property.value }}</td>
                <td>{{ product_property.createdAt ? product_property.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product_property.updatedAt ? product_property.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('product_property_show', {'id': product_property.id}) }}">show</a>
                    <a href="{{ path('product_property_edit', {'id': product_property.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_property_new') }}">Cоздать новый</a>
{% endblock %}
