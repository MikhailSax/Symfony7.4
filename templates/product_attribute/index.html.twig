{% extends 'admin.html.twig' %}
{% block title %}Атрибуты продуктов{% endblock %}
{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Атрибуты продуктов</h1>
        <a class="btn btn-primary" href="{{ path('admin_product_attribute_new') }}">Добавить атрибут</a>
    </div>
    <table class="table table-striped">
        <thead><tr><th>Продукт</th><th>Название</th><th>Тип</th><th>Обяз.</th><th></th></tr></thead>
        <tbody>
        {% for attribute in attributes %}
            <tr>
                <td>{{ attribute.product.title }}</td>
                <td>{{ attribute.name }}</td>
                <td>{{ attribute.type }}</td>
                <td>{{ attribute.required ? 'Да' : 'Нет' }}</td>
                <td class="text-end d-flex gap-1 justify-content-end">
                    <a class="btn btn-sm btn-outline-secondary" href="{{ path('admin_product_attribute_edit', {id: attribute.id}) }}">Изм.</a>
                    <form method="post" action="{{ path('admin_product_attribute_delete', {id: attribute.id}) }}" onsubmit="return confirm('Удалить атрибут?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ attribute.id) }}">
                        <button class="btn btn-sm btn-outline-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="5">Нет атрибутов.</td></tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
